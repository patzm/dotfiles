#! /usr/bin/env bash

# enable long-press character accent menu
defaults write -g ApplePressAndHoldEnabled -bool true
defaults write com.jetbrains.intellij ApplePressAndHoldEnabled -bool false
defaults write com.jetbrains.intellij.ce ApplePressAndHoldEnabled -bool false
defaults write com.jetbrains.pycharm ApplePressAndHoldEnabled -bool false
defaults write com.jetbrains.pycharm.ce ApplePressAndHoldEnabled -bool false

defaults write com.apple.finder DisableAllAnimations -bool true  # yabai

# enable window movement with hotkey Ctrl+CMD and drag
defaults write -g NSWindowShouldDragOnGesture -bool true

