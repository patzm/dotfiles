{{ if eq .chezmoi.os "darwin" -}}
#! /usr/bin/env bash

fonts=(
    font-meslo-lg-nerd-font
)
packages=(
    bat
    bottom
    cmake
    eza
    exiftool
    exiv2
    fd
    ffmpeg
    fzf
    imagemagick
    jq
    just
    neovim
    pre-commit
    python
    starship
    tmux
    zsh
)
cask_packages=(
    alacritty
    angry-ip-scanner
    balenaetcher
    beyond-compare
    gimp
    gitkraken
    inkscape
    mark-text
    mattermost
    meld
    modern-csv
    onlyoffice
    plexamp
    raspberry-pi-imager
    slack
    sublime-text
    tad
    tor-browser
    visual-studio-code
    vlc
)

echo "Installing macOS fonts"
brew install --quiet "${fonts[@]}"
echo "Installing macOS packages"
brew install --quiet "${packages[@]}"
echo "Installing macOS cask packages"
brew install --quiet --cask "${cask_packages[@]}"

